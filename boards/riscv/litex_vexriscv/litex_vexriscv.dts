/dts-v1/;

#include <riscv32-litex-vexriscv.dtsi>

/ {
	model = "LiteX VexRiscV";
	compatible = "litex,vexriscv";
	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &ram0;
	};

	ram0: memory@40000000 {
		device_type = "memory";
		reg = <0x40000000 0x10000000>;
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
};

&timer0 {
	status = "okay";
};

&eth0 {
	status = "okay";
};

&dna0 {
	status = "okay";
};

&spi0 {
	status = "okay";
};

&prbs0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	label = "I2C_0";
};

&pwm0 {
	status = "okay";
};

&gpio_out {
	status = "okay";
};

&gpio_in {
	status = "okay";
};

&i2s_rx {
	status = "okay";
};

&i2s_tx {
	status = "okay";
};

&clk0 {
	status = "okay";
};

&clk1 {
	status = "okay";
};

&clock0 {
	status = "okay";
};

dw1000_spi: &spi0 {
        status = "okay";
        litex_dw_spi: arty_dw1000_spi@0 { 
                compatible = "decawave,dw1000";
                status = "okay";
                reg = <0>;
                label = "dw1000_spi_if";
                int-gpios = <&gpioa 9 GPIO_ACTIVE_HIGH>;
                reset-gpios = <&gpiob 10 GPIO_ACTIVE_LOW>;
                spi-max-frequency = <8000000>;
        };
};
